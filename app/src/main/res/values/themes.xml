<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CharacterItemContainer">
        <item name="android:background">@color/black</item>
        <item name="android:layout_margin">@dimen/small_margin_dimen</item>
    </style>

    <style name="CharacterItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_image_item_dimen</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/character_profile_picture</item>
    </style>

    <style name="CharacterItemSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_margin_dimen</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="CharacterItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/small_padding_dimen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size_dimen</item>
    </style>

    <style name="CharacterItemText.SuperheroName" parent="CharacterItemText" />
    <style name="CharacterItemText.CharacterName" parent="CharacterItemText" />
</resources>